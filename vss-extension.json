{
  "manifestVersion": 1,
  "id": "branch-pilot",
  "name": "BranchPilot",
  "version": "1.0.1",
  "publisher": "FeliceLombardi",
  "description": "Create branches from Work Items with smart naming rules, automatic linking, and full configurability.",
  "public": true,
  "categories": ["Azure Boards"],
  "tags": ["branch", "git", "work item", "devops", "branching strategy"],
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "icons": {
    "default": "assets/icons/logo.png"
  },
  "content": {
    "details": {
      "path": "README.md"
    }
  },
  "screenshots": [],
  "links": {
    "getstarted": {
      "uri": "https://github.com/managerfx/branch-pilot-az-devops#readme"
    },
    "support": {
      "uri": "https://github.com/managerfx/branch-pilot-az-devops/issues"
    }
  },
  "branding": {
    "color": "#0078d4",
    "theme": "dark"
  },
  "scopes": [
    "vso.work_write",
    "vso.code_write"
  ],
  "contributions": [
    {
      "id": "create-branch-action",
      "type": "ms.vss-web.action",
      "description": "Opens the BranchPilot dialog to create a branch from a Work Item",
      "targets": [
        "ms.vss-work-web.work-item-context-menu"
      ],
      "properties": {
        "text": "New branch... (BranchPilot)",
        "title": "Create a new branch linked to this Work Item",
        "toolbarText": "New branch...",
        "icon": "assets/icons/branch-action.png",
        "group": "actions",
        "uri": "dist/action/index.html"
      }
    },
    {
      "id": "create-branch-dialog",
      "type": "ms.vss-web.external-content",
      "description": "Modal dialog content for branch creation",
      "targets": [],
      "properties": {
        "uri": "dist/modal/index.html"
      }
    },
    {
      "id": "settings-hub",
      "type": "ms.vss-web.hub",
      "description": "BranchPilot settings for project administrators",
      "targets": [
        "ms.vss-web.project-admin-hub-group"
      ],
      "properties": {
        "name": "BranchPilot",
        "order": 100,
        "uri": "dist/settings/index.html",
        "icon": "assets/icons/branch-action.png"
      }
    }
  ],
  "files": [
    {
      "path": "dist",
      "addressable": true
    },
    {
      "path": "assets",
      "addressable": true
    }
  ]
}
